server:
  port: 4141
  
spring:
  application:
    name: API-GATEWAY
  cloud:
    gateway:
      routes:
      - id: product-service
        uri: lb://PRODUCT-SERVICE
        predicates:
        - Path=/api/product/**
      - id: order-service 
        uri: lb://ORDER-SERVICE
        predicates:
        - Path=/dept/**
      - id: inventory-service 
        uri: lb://INVENTORY-SERVICE
        predicates:
        - Path=/dept/**  
        